<p id="notice"><%= notice %></p>

<h1>Listado de Usuarios.</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.email %></td>
        <%if !usuario.tipo  %>
          <td><%= link_to 'Eliminar usuario', usuario, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usuario', new_usuario_path %>
